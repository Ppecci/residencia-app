<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ui.acceso.AccesoControlador">
    <center>
        <VBox spacing="10" alignment="CENTER">
            <children>
                <Label text="Gestor de Residencias" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                <GridPane hgap="8" vgap="8">
                    <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
                    <columnConstraints>
                        <ColumnConstraints halignment="RIGHT" minWidth="120"/>
                        <ColumnConstraints halignment="LEFT" minWidth="220"/>
                    </columnConstraints>

                    <children>
                        <Label text="Usuario:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <TextField fx:id="usuarioCampo" promptText="ej: admin"
                                   GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                        <Label text="Contraseña:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <PasswordField fx:id="claveCampo" promptText="••••••••"
                                       GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                        <Button fx:id="accederBoton" text="Acceder" defaultButton="true"
                                onAction="#alAcceder"
                                GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                        <Label fx:id="errorEtiqueta" textFill="red"
                               GridPane.rowIndex="3" GridPane.columnIndex="0" GridPane.columnSpan="2"/>
                    </children>
                </GridPane>
            </children>
        </VBox>
    </center>
</BorderPane>

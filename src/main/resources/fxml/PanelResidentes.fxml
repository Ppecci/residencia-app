<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="es.tfg.residencias.ui.admin.residentes.PanelResidentesControlador">

    <top>
        <ToolBar>
            <items>
                <TextField fx:id="txtBuscar" promptText="Buscar por nombre o apellidos" onKeyReleased="#buscar"/>
                <Button text="Nuevo" onAction="#nuevo"/>
                <Button text="Editar" onAction="#editar"/>
                <Button text="Eliminar" onAction="#eliminar"/>
                <Separator/>
                <Button text="Refrescar" onAction="#refrescar"/>
                <Button text="Ver Detalle" onAction="#verDetalle"/>
            </items>
        </ToolBar>
    </top>

    <center>
        <TableView fx:id="tabla">
            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="60"/>
                <TableColumn fx:id="colNombre" text="Nombre" prefWidth="140"/>
                <TableColumn fx:id="colApellidos" text="Apellidos" prefWidth="180"/>
                <TableColumn fx:id="colFecha" text="Nacimiento" prefWidth="120"/>
                <TableColumn fx:id="colNotas" text="Notas" prefWidth="220"/>
                <TableColumn fx:id="colActivo" text="Activo" prefWidth="80"/>
            </columns>
        </TableView>
    </center>
<bottom>
    <TitledPane text="Formulario" expanded="false">
        <content>
            <GridPane hgap="8" vgap="8" style="-fx-padding: 10;">
                <children>
                    <Label text="Nombre:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <TextField fx:id="inNombre" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                    <Label text="Apellidos:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <TextField fx:id="inApellidos" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                    <Label text="Nacimiento (yyyy-MM-dd):" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                    <TextField fx:id="inFecha" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                    <Label text="Notas:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                    <TextArea fx:id="inNotas" prefRowCount="3" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                    <Label text="Activo:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                    <CheckBox fx:id="chkActivo" selected="true" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                    <Button text="Guardar" onAction="#guardar" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
                </children>
            </GridPane>
        </content>
    </TitledPane>
</bottom>

</BorderPane>
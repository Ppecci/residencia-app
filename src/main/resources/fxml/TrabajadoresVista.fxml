<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="es.tfg.residencias.ui.admin.trabajadores.TrabajadoresControlador">

  <top>
    <ToolBar>
      <TextField fx:id="txtBuscar" promptText="Buscar por nombre, usuario o email..."/>
      <Button text="Buscar"    onAction="#buscar"/>
      <Button text="Refrescar" onAction="#refrescar"/>
      <Separator/>
      <Button text="Nuevo"     onAction="#nuevo"/>
      <Button text="Editar"    onAction="#editar"/>
      <Button text="Guardar"   onAction="#guardar"/>
      <Separator/>
      <Button text="Ver detalle" onAction="#verDetalle"/>
      <Button fx:id="btnEliminar" text="Eliminar" onAction="#eliminar" styleClass="danger-btn"/>
    </ToolBar>
  </top>

  <center>
    <TableView fx:id="tabla">
      <columns>
        <TableColumn fx:id="colId"      text="ID"        prefWidth="60"/>
        <TableColumn fx:id="colNombre"  text="Nombre"    prefWidth="180"/>
        <TableColumn fx:id="colUsuario" text="Usuario"   prefWidth="160"/>
        <TableColumn fx:id="colEmail"   text="Email"     prefWidth="220"/>
        <TableColumn fx:id="colActivo"  text="Activo"    prefWidth="80"/>
      </columns>
    </TableView>
  </center>

  <bottom>
    <ToolBar>
      <TextField    fx:id="inNombre"   promptText="Nombre"/>
      <TextField    fx:id="inUsuario"  promptText="Usuario"/>
      <PasswordField fx:id="inPassword" promptText="ContraseÃ±a (solo alta)"/>
      <TextField    fx:id="inEmail"    promptText="Email"/>
      <CheckBox     fx:id="chkActivo"  text="Activo" selected="true"/>
    </ToolBar>
  </bottom>

</BorderPane>

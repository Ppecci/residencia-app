<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="es.tfg.residencias.ui.trabajador.DialogoDietaControlador">

    <top>
        <ToolBar>
            <Label fx:id="lblTitulo" text="Dieta â€” Residente: " />
            <Pane HBox.hgrow="ALWAYS"/>
            <Button text="Guardar" onAction="#guardar"/>
            <Button text="Cerrar"  onAction="#cerrar"/>
        </ToolBar>
    </top>

    <center>
        <GridPane hgap="10" vgap="10">
            <padding><Insets top="12" right="12" bottom="12" left="12"/></padding>

            <columnConstraints>
                <ColumnConstraints percentWidth="25"/>
                <ColumnConstraints percentWidth="75"/>
            </columnConstraints>

            <children>
                <TitledPane text="Dieta vigente" expanded="true" GridPane.columnSpan="2">
                    <content>
                        <GridPane hgap="8" vgap="8" >
                            <children>
                                <Label text="Nombre:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                                <Label fx:id="lblVigenteNombre" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                                <Label text="Desde:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                                <Label fx:id="lblVigenteDesde" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                                <Label text="Notas:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                                <Label fx:id="lblVigenteNotas" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                            </children>
                        </GridPane>
                    </content>
                </TitledPane>

                <Separator GridPane.rowIndex="1" GridPane.columnSpan="2"/>

                <Label text="Nueva dieta:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <ComboBox fx:id="cbDieta" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Inicio (YYYY-MM-DD):" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <TextField fx:id="inDesde" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                <Label text="Notas:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <TextField fx:id="inNotas" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
            </children>
        </GridPane>
    </center>

</BorderPane>
